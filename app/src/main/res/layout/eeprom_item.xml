<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EEPROM读写"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/title_text_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_5"
        android:background="@drawable/mian_border_style">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_13"
                    android:text="EEPROM类型:">
                </TextView>
                <Spinner
                    android:id="@+id/eeprom_type_spinner"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    >
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:text="地址(0x):">
                </TextView>
                <EditText
                    android:id="@+id/eeprom_write_addr_edit"
                    android:layout_width="@dimen/dp_50"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00"
                    android:textSize="@dimen/sp_14"
                    android:digits="0123456789abcdefABCDEF"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:text="写长度(0x):">
                </TextView>
                <EditText
                    android:id="@+id/eeprom_write_data_len_edit"
                    android:layout_width="@dimen/dp_50"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00"
                    android:textSize="@dimen/sp_14"
                    android:digits="0123456789abcdefABCDEF"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </Space>
                <TextView
                    android:id="@+id/eeprom_write_data_clear_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清空数据"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_color">
                </TextView>
            </LinearLayout>
            <EditText
                android:id="@+id/eeprom_write_data_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/edit_border_style"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_13"
                android:hint="输入数据，hex不含空格"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_13"
                    android:text="地址(0x):">
                </TextView>
                <EditText
                    android:id="@+id/eeprom_read_addr_edit"
                    android:layout_width="@dimen/dp_50"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00"
                    android:textSize="@dimen/sp_13"
                    android:digits="0123456789abcdefABCDEF"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_13"
                    android:text="读长度(0x):">
                </TextView>
                <EditText
                    android:id="@+id/eeprom_read_data_len_edit"
                    android:layout_width="@dimen/dp_50"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00"
                    android:textSize="@dimen/sp_13"
                    android:digits="0123456789abcdefABCDEF"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </Space>
                <TextView
                    android:id="@+id/eeprom_read_data_clear_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清空数据"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_color">
                </TextView>
            </LinearLayout>
            <EditText
                android:id="@+id/eeprom_read_data_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/edit_border_style"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_13"
                android:hint="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_5">
                <Button
                    android:id="@+id/eeprom_read_btn"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/btn_style"
                    android:text="@string/read"
                    android:textAllCaps="false"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/eeprom_write_btn"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/btn_style"
                    android:text="@string/write"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>